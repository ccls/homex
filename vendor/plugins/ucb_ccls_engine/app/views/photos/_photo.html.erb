<% content_tag_for( :tr, photo, :class => 'row' ) do %>
<td class='thumb'>
<%= image_tag(photo.image.url(:small)) %>
</td>
<td class='title'>
<%= link_to photo.title, photo %>
</td>
<td class='manage'>
<%= link_to 'Edit', edit_photo_path(photo) %>&nbsp;
<%= link_to 'Destroy', photo, 
	:confirm => 'Are you sure?', :method => :delete %>
</td>
<% end %><!-- class='photo row' -->
