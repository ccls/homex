<%# stylesheets('document') %>

<% form_for(@document,:html => { :multipart => true }) do |f| %>
	<%= f.error_messages %>

	<div>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div>
	<div class='document'>
		<%= f.label :document -%>
		<% unless @document.new_record? -%>
			(<%= @document.document.url -%>)
		<% end -%><br />
		<%= f.file_field :document %>
	</div>
	</div>
	<div class='abstract'>
		<%= f.label :abstract %><br />
		<%= f.text_area :abstract %>
	</div>
	<p>
		<%= f.submit( (@document.new_record?)? "Create" : "Update" )%>
	</p>
<% end %>
