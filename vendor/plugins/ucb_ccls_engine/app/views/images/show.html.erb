<%# stylesheets('image') %>

<p>
  <b>Title:</b>
  <%=h @image.title %>
</p>

<p>
  <b>Image:</b>
</p>
<% @image.image.styles.keys.each do |key| %>
<div class='image_preview'>
<p><%= @image.image.url(key) %></p>
<%= image_tag @image.image.url(key) %>
</div>
<% end %>

<p>
  <b>Caption:</b>
  <%=h @image.caption %>
</p>

<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
