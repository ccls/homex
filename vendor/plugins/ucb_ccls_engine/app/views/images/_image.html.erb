<% content_tag_for( :tr, image, :class => 'row' ) do %>
<td class='thumb'>
<%= image_tag(image.image.url(:small)) %>
</td>
<td class='title'>
<%= link_to image.title, image %>
</td>
<td class='manage'>
<%= link_to 'Edit', edit_image_path(image) %>&nbsp;
<%= link_to 'Destroy', image, 
	:confirm => 'Are you sure?', :method => :delete %>
</td>
<% end %><!-- class='image row' -->
