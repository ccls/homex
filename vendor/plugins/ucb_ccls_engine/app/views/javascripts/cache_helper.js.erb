jQuery(function(){

locale_links = '<%= if( session[:locale] && session[:locale] == 'es' )
link_to( 'English', locale_path('en'), :id => 'session_locale' )
else
link_to( 'Espa&ntilde;ol', locale_path('es'), :id => 'session_locale' )
end %>'

jQuery('#session_locale').replaceWith(locale_links);

