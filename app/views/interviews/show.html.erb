<% stylesheets('subject') %>
<% render 'submenu' %>

<% content_for :id_bar do %>
<%= link_to 'Edit', edit_interview_path(@interview) %>
<% end if current_user.may_edit_interviews? %>

<% id_bar_for(@subject) %>

<% content_tag_for( :div, @interview ) do %>
<h4>Interview Info</h4>
<p>Outcome:
<%=@interview.subject.try(:homex_outcome).try(:interview_outcome) %>
</p>

<h4>Dates of interview</h4>
<p>began: <%=mdy @interview.began_on %>:  
ended (if other than date began)<%=mdy @interview.ended_on %>
</p>
<p>Interviewer:<%= @interview.interviewer %></p>
<p>Version:<%= @interview.instrument_version %></p>
<p>Interview method:<%= @interview.interview_method %></p>
<p>Interview language:<%= @interview.language %></p>

<h4>Respondent Info</h4>
<p>Name:<%= @interview.respondent_full_name %></p>
<p>Relationship:<%= @interview.subject_relationship %></p>
<p>specify:<%= @interview.subject_relationship_other %></p>

<% end %><%# content_tag_for %>
