<% form_for(@home_page_pic,:html => { :multipart => true }) do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :image %><br />
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.label :caption %><br />
		<%= f.text_area :caption %>
	</p>
	<p>
		<%= f.label :active %><br />
		<%= f.check_box :active %>
	</p>
	<p>
		<%= f.submit( (@home_page_pic.new_record?)? "Create" : "Update" )%>
	</p>
<% end %>
