<% content_tag_for( :div, home_page_pic, :class => 'row' ) do %>
<div class='thumb'>
<%= image_tag(home_page_pic.image.url(:small)) unless (home_page_pic.image_file_name.blank? ) %>&nbsp;
</div>
<div class='title'>
<%= link_to home_page_pic.title, home_page_pic %>
</div>
<div class='active'><%=h home_page_pic.active %></div>
<div class='manage'>
<%= link_to 'Edit', edit_home_page_pic_path(home_page_pic) %>&nbsp;
<%= link_to 'Destroy', home_page_pic, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %><!-- class='home_page_pic row' -->
