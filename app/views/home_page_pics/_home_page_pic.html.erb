<% content_tag_for( :div, home_page_pic, :class => 'row' ) do %>
<div class='thumb'>
<%= image_tag(home_page_pic.image.url(:small)) unless (home_page_pic.image_file_name.blank? ) %>&nbsp;
</div>
<div class='title'>
<%= link_to home_page_pic.title, home_page_pic %>
</div>
<div class='active'>
<%# it is IMPORTANT, nay VITAL, to have the hidden false 
	BEFORE the check_box for true %>
<%= hidden_field_tag "home_page_pics[#{home_page_pic.id}][active]",
	false, :id => nil %>
<%= check_box_tag "home_page_pics[#{home_page_pic.id}][active]",
	true, home_page_pic.active %> 
<%= label_tag "home_page_pics[#{home_page_pic.id}][active]",
	"Active?" %>
</div>
<div class='manage'>
<%= link_to 'Edit', edit_home_page_pic_path(home_page_pic) %>&nbsp;
<%= link_to 'Destroy', home_page_pic, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %><!-- class='home_page_pic row' -->
