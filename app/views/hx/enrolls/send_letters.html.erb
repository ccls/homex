<% javascripts('hx_enrolls') %>
<% stylesheets('hx_enrolls') %>
<%= render 'submenu' %>

<% form_tag(update_select_hx_enrolls_path, :method => :put ) do %>
	<button type='button' id='select_all'>select all</button>
	<button type='button' id='deselect_all'>deselect all</button>
<div class='set_date'>
	<span>letter sent on:</span>
	<%= text_field_tag :date, params[:date] %>
	<%= submit_tag 'set date' %>
	<%= submit_tag 'download' %>
</div>

<% if @subjects.length > 0 %>
<table id='subjects'><thead><tr>
<th class='checkbox'>&nbsp;</th>
<th><%= sort_link('ChildID') %></th>
<th><%= sort_link('StudyID') %></th>
<th><%= sort_link('Priority') %></th>
<th><%= sort_link('First Name') %></th>
<th><%= sort_link('Last Name') %></th>
<th><%= sort_link('Outcome') %></th>
<th><%= sort_link('Outcome Date') %></th>
</tr></thead><tbody>
<%= render :partial => 'hx/enrolls/subject', :collection => @subjects %>
</tbody></table>
<% else %>
<p>There are no subjects.</p>
<% end %>
<% end %><%# form_tag %>

<%= will_paginate @subjects %>
