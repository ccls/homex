<% stylesheets('edit_hx_enrollment') %>
<% render 'hx/subjects/submenu', :subject => @enrollment.subject %>
<% render 'hx/subjects/id_bar', :subject => @enrollment.subject %>

<% form_for(@enrollment,:url => hx_enrollment_path(@enrollment)) do |f| %>
<%= f.error_messages %>

<p><%= @enrollment.project.description -%></p>

<%= f.wrapped_text_field :recruitment_priority %>
<%= f.wrapped_check_box :able_to_locate %>
<%= f.wrapped_check_box :is_candidate %>
<%= f.wrapped_check_box :is_eligible %>
<%= f.wrapped_collection_select :ineligible_reason_id,
	IneligibleReason.all, :id, :description, :include_blank => true %>

<%= f.wrapped_text_field :ineligible_reason_specify %>
<%= f.wrapped_check_box :consented %>

<%= f.wrapped_text_field :consented_on %>
<%= f.wrapped_collection_select :refusal_reason_id,
	RefusalReason.all, :id, :description, :include_blank => true %>

<%= f.wrapped_text_field :other_refusal_reason %>
<%= f.wrapped_check_box :is_chosen %>
<%= f.wrapped_text_field :reason_not_chosen %>
<%= f.wrapped_check_box :terminated_participation %>
<%= f.wrapped_text_field :terminated_reason %>
<%= f.wrapped_check_box :is_complete %>

<%= f.wrapped_text_field :completed_on %>

<%= f.wrapped_check_box :is_closed %>
<%= f.wrapped_text_field :reason_closed %>
<%= f.wrapped_text_area  :notes %>

<p>
	<%= f.submit( "Update" )%>
</p>
<% end %>
