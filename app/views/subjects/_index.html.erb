<% stylesheets('subjects') %>
<%= render 'subjects/subsearch' %>

<% if @subjects.length > 0 %>
<table id='subjects'><thead><tr>
<th><%= sort_link('ChildID') %></th>
<th><%= sort_link('StudyID') %></th>
<th><%= sort_link('Last Name') %></th>
<th><%= sort_link('First Name') %></th>
</tr></thead><tbody>
<%#= render :partial => 'subjects/subject', :collection => @subjects %>
<%= render :partial => 'subject', :collection => @subjects %>
</tbody></table>
<% else %>
<p>There are no subjects.</p>
<% end %>

<%= will_paginate @subjects %>
