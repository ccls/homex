<% stylesheets('subject_id_bar') %>

<% content_for :main do %>
<div id='id_bar'>
<div class='childid'>
<span>ChildID:</span>
<span><%= (@subject||subject).childid -%></span>
</div><!-- class='childid' -->
<div class='studyid'>
<span>StudyID:</span>
<span><%= (@subject||subject).studyid -%></span>
</div><!-- class='studyid' -->
<div class='full_name'>
<span><%= (@subject||subject).full_name -%></span>
</div><!-- class='full_name' -->
<div class='controls'>
<%= yield :id_bar %>
</div><!-- class='controls' -->
</div><!-- id='id_bar' -->
<% end %>

<% content_for :main do %>
<div id='do_not_contact'>
Subject requests no further contact with Study.
</div>
<% end if (@subject||subject).do_not_contact? %>
