<% form_for(@guide,
	:html => { :class => 'edit_guide'} ) do |f| %>
	<%= f.error_messages %>

	<%= f.wrapped_text_field :controller %>
	<%= f.wrapped_text_field :action %>
	<%= f.wrapped_text_area :body, 
		:label_text => "Body: (uses sanitized #{link_to('textile','http://redcloth.org',:target => 'new')})" %>

	<%= f.submit( (@guide.new_record?)? "Create" : "Update" )%>
<% end %>

