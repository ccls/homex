<% stylesheets('base/jquery.ui.all.css') %>
<% id_bar_for(@study_subject) %>

<%= f.error_messages %>

<div class='do_not_contact field_wrapper'>
<%= f.label :do_not_contact, "Contact Status:" %>
<%= f.check_box :do_not_contact %>
<%= f.label :do_not_contact, "do not contact subject?" %>
</div><!-- class='do_not_contact' -->

<%= f.label :name %><br />
<%= f.text_field :first_name %>
<%= f.text_field :middle_name %>
<%= f.text_field :last_name %><br/>

<%= f.label :fathers_name %><br />
<%= f.text_field :father_first_name %>
<%= f.text_field :father_middle_name %>
<%= f.text_field :father_last_name %><br/>

<%= f.label :mothers_name %><br />
<%= f.text_field :mother_first_name %>
<%= f.text_field :mother_middle_name %>
<%= f.text_field :mother_last_name %><br/>

<%= f.label :mothers_maiden_name %><br />
<%= f.text_field :mother_maiden_name %><br/>

<%= f.wrapped_date_text_field :dob,
	:class => 'datepicker',
	:label_text => 'DOB' %>

<%= f.wrapped_text_field :state_id_no,
	:label_text => 'State ID No.' %>

<%= f.wrapped_sex_select :sex, 
	:include_blank => true %>

<%= f.wrapped_collection_select :race_ids, Race.all, 
	:id, :to_s, {:label_text => 'Race'}, {
	:multiple => true } %>

<%= f.wrapped_collection_select :subject_type_id, SubjectType.all, 
	:id, :to_s, :include_blank => true,
	:label_text => "Relation to Case:" %>

<%= f.wrapped_collection_select :vital_status_id,
	VitalStatus.all, :id, :to_s, :include_blank => true %>

<%= render 'study_subject_homex_outcomes' %>
<%#= render 'homex_outcome_form', :f => f %>
