<% form_for(@home_exposure_response) do |f| %>
  <%= f.error_messages %>

<% HomeExposureResponse.questions_and_answers.each do |qanda| %>
	<%= f.he_question(qanda) %>
<% end %>

<p>
	<%= f.check_box :is_complete %>
	<%= f.label :is_complete, "Is the interview entry complete?" %>
</p>

<p><%= 
	f.submit( (@home_exposure_response.new_record?)? "Create" : "Update" 
)%></p>
<% end %>
